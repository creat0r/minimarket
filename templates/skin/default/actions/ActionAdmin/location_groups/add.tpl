{extends file='actions/ActionAdmin/info/index.tpl'}{block name="content-bar"}    <div class="btn-group">        <a href="{router page='admin'}mm_location_groups/" class="btn"><i class="icon-chevron-left"></i></a>    </div>{/block}{block name="content-body"}<div class="span12">	<form method="POST" name="location_group_add" enctype="multipart/form-data" class="form-horizontal uniform">		<input type="hidden" name="security_ls_key" value="{$ALTO_SECURITY_KEY}"/>		<div class="b-wbox">			<div class="b-wbox-header">				<div class="b-wbox-header-title">					{if $sEvent=='mm_location_group_add'}						{$aLang.plugin.minimarket.location_group_adding}					{elseif $sEvent=='mm_location_group_edit'}						{$aLang.plugin.minimarket.location_group_editing} ({$oLocationGroup->getName()})					{/if}				</div>			</div>			<div class="control-group">				<label class="control-label" for="location_group_name">{$aLang.plugin.minimarket.location_group_adding_name}:</label>				<div class="controls">					<input id="location_group_name" class="input-text" type="text" value="{$_aRequest.location_group_name}" name="location_group_name">					<span class="help-block">{$aLang.plugin.minimarket.location_group_adding_name_example}</span>				</div>			</div>			<div class="control-group">				<label class="control-label">{$aLang.plugin.minimarket.location_group_adding_location}:</label>				<div class="controls">					<select class="admin-select-multiple" multiple="multiple" size="20" name="location_group_city_id[]">						{foreach from=$aGeoCountries item=oGeoCountry}							{foreach from=$aGeoRegions[$oGeoCountry->getId()] item=oGeoRegion}								{foreach from=$aGeoCities[$oGeoRegion->getId()] item=oGeoCity}									<option {if is_array($_aRequest.location_group_city_id) && in_array($oGeoCity->getId(),$_aRequest.location_group_city_id)}selected {/if}value="{$oGeoCity->getId()}">										{$oGeoCountry->getNameRu()} &mdash; {$oGeoRegion->getNameRu()} &mdash; {$oGeoCity->getNameRu()}									</option>								{/foreach}							{/foreach}						{/foreach}					</select>				</div>			</div>            <div class="b-wbox-content nopadding">                <div class="form-actions">                    <button type="submit" class="btn btn-primary"                            name="location_group_add_submit">{$aLang.plugin.minimarket.location_group_submit}</button>                </div>            </div>		</div>	</form></div>{/block}