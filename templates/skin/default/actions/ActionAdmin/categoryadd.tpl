{extends file='actions/ActionAdmin/info/index.tpl'}{block name="content-bar"}    <div class="btn-group">        <a href="{router page='admin'}mm_categories/" class="btn"><i class="icon-chevron-left"></i></a>    </div>{/block}{block name="content-body"}	<form method="POST" name="attributadd" enctype="multipart/form-data" class="form-horizontal uniform">		<input type="hidden" name="security_ls_key" value="{$ALTO_SECURITY_KEY}"/>		<div class="b-wbox">			<div class="b-wbox-header">                {if $sEvent=='mm_category_add'}                    <div class="b-wbox-header-title">{$aLang.plugin.minimarket.category_add_title}</div>                {elseif $sEvent=='mm_category_edit'}                    <div class="b-wbox-header-title">{$aLang.plugin.minimarket.category_edit_title}: "{$oCategory->getURL()|escape:'html'}"</div>                {/if}			</div>			<div class="b-wbox-content nopadding">				<div class="control-group">					<label class="control-label" for="category_name">{$aLang.plugin.minimarket.category_name}:</label>					<div class="controls">						<input id="category_name" class="input-text" type="text" value="{$_aRequest.category_name}" name="category_name">						<span class="help-block">{$aLang.plugin.minimarket.category_name_example}</span>					</div>				</div>				<div class="control-group">					<label class="control-label" for="category_url">{$aLang.plugin.minimarket.category_url}:</label>					<div class="controls">						<input id="category_url" class="input-text" type="text" value="{$_aRequest.category_url}" name="category_url">						<span class="help-block">{$aLang.plugin.minimarket.category_url_example}</span>					</div>				</div>				<div class="control-group">                    <label class="control-label" for="category_description">{$aLang.plugin.minimarket.category_description}:</label>                    <div class="controls">						<textarea name="category_description" id="category_description" class="input-text" rows="5">{$_aRequest.category_description}</textarea>                    </div>				</div>				<div class="control-group">					<label class="control-label" for="category_parent">{$aLang.plugin.minimarket.category_parent}:</label>                    <div class="controls">                        <select name="category_select" class="input-text">                            <option value="0"{if !$_aRequest.category_select} selected{/if}>{$aLang.plugin.minimarket.category_default}</option>							{foreach from=$aCategories item=Category key=key}									<option{if $_aRequest.category_select==$key} selected{/if} value="{$key}">{for $for=1 to $Category.position}&mdash;{/for}{if $for} {/if}{$Category.name}</option>							{/foreach}                        </select>                        <span class="help-block">{$aLang.plugin.minimarket.category_select_example}</span>                    </div>				</div>			</div>            <div class="b-wbox-content nopadding">                <div class="form-actions">                    <button type="submit" class="btn btn-primary"                            name="submit_category_add">{$aLang.plugin.minimarket.category_submit}</button>                </div>            </div>		</div>	</form>{/block}