{extends file='actions/ActionAdmin/info/index.tpl'}{block name="content-bar"}    <div class="btn-group">        <a href="{router page='admin'}mm_brands/" class="btn"><i class="icon-chevron-left"></i></a>    </div>{/block}{block name="content-body"}	<form method="POST" name="attributadd" enctype="multipart/form-data" class="form-horizontal uniform">		<input type="hidden" name="security_ls_key" value="{$ALTO_SECURITY_KEY}"/>		<div class="b-wbox">			<div class="b-wbox-header">                {if $sEvent=='mm_brand_add'}                    <div class="b-wbox-header-title">{$aLang.plugin.minimarket.brand_add_title}</div>                {elseif $sEvent=='mm_brand_edit'}                    <div class="b-wbox-header-title">{$aLang.plugin.minimarket.brand_edit_title}: "{$oBrand->getURL()|escape:'html'}"</div>                {/if}			</div>			<div class="b-wbox-content nopadding">				<div class="control-group">					<label class="control-label" for="brand_name">{$aLang.plugin.minimarket.brand_name}:</label>					<div class="controls">						<input id="brand_name" class="input-text" type="text" value="{$_aRequest.brand_name}" name="brand_name">						<span class="help-block">{$aLang.plugin.minimarket.brand_name_example}</span>					</div>				</div>				<div class="control-group">					<label class="control-label" for="brand_url">{$aLang.plugin.minimarket.brand_url}:</label>					<div class="controls">						<input id="brand_url" class="input-text" type="text" value="{$_aRequest.brand_url}" name="brand_url">						<span class="help-block">{$aLang.plugin.minimarket.brand_url_example}</span>					</div>				</div>				<div class="control-group">                    <label class="control-label" for="brand_description">{$aLang.plugin.minimarket.brand_description}:</label>                    <div class="controls">						<textarea name="brand_description" id="brand_description" class="input-text" rows="5">{$_aRequest.brand_description}</textarea>                    </div>				</div>			</div>            <div class="b-wbox-content nopadding">                <div class="form-actions">                    <button type="submit" class="btn btn-primary"                            name="submit_brand_add">{$aLang.plugin.minimarket.brand_submit}</button>                </div>            </div>		</div>	</form>{/block}