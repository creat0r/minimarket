{extends file='actions/ActionAdmin/info/index.tpl'}{block name="content-bar"}{/block}{block name="content-body"}	{if $aPaySystems}        <div class="b-wbox">            <div class="b-wbox-content nopadding">				<table class="table table-striped table-condensed pages-list" id="sortable">                    <thead>                    <tr>                        <th>{$aLang.plugin.minimarket.pay_system_name}</th>                        <th class="span2">{$aLang.plugin.minimarket.pay_system_actions}</th>                    </tr>                    </thead>					<tbody class="content">						{foreach from=$aPaySystems item=oPaySystem}                        <tr>                            <td class="center">                                {$oPaySystem->getName()}                            </td>                            <td class="center">                                <a href="{router page='admin'}mm_pay_system_edit/{$oPaySystem->getId()}/">                                    <i class="icon-edit tip-top" title="{$aLang.plugin.minimarket.pay_system_edit}"></i>								</a>                            </td>                        </tr>						{/foreach}					</tbody>				</table>			</div>		</div>	{/if}{/block}