{extends file='actions/ActionAdmin/info/index.tpl'}{block name="content-bar"}	<div class="btn-group">		<a href="{router page='admin'}mm_orders/" class="btn"><i class="icon-chevron-left"></i></a>	</div>{/block}{block name="content-body"}<div class="span12">	<form method="POST" name="order" enctype="multipart/form-data" class="form-horizontal uniform">		<input type="hidden" name="security_ls_key" value="{$ALTO_SECURITY_KEY}"/>		<div class="b-wbox">			<div class="b-wbox-header">				<div class="b-wbox-header-title">{$aLang.plugin.minimarket.order_information}</div>			</div>			<div class="b-wbox-content nopadding">				<div class="control-group">					<label class="control-label" for="client_name">{$aLang.plugin.minimarket.order_client_name}:</label>					<div class="controls">						<input disabled id="client_name" class="input-text" type="text" value="{$_aRequest.client_name}" name="client_name" />					</div>				</div>				<div class="control-group">					<label class="control-label" for="client_name">{$aLang.plugin.minimarket.order_client_index}:</label>					<div class="controls">						<input disabled id="client_index" class="input-text" type="text" value="{$_aRequest.client_index}" name="client_index" />					</div>				</div>				<div class="control-group">					<label class="control-label" for="client_name">{$aLang.plugin.minimarket.order_client_address}:</label>					<div class="controls">						<input disabled id="client_address" class="input-text" type="text" value="{$_aRequest.client_address}" name="client_address" />					</div>				</div>				<div class="control-group">					<label class="control-label" for="client_phone">{$aLang.plugin.minimarket.order_client_phone}:</label>					<div class="controls">						<input disabled id="client_phone" class="input-text uneditable-input" type="text" value="{$_aRequest.client_phone}" name="client_phone" />					</div>				</div>				<div class="control-group">                    <label class="control-label" for="client_comment">{$aLang.plugin.minimarket.order_client_comment}:</label>                    <div class="controls">						<textarea disabled name="client_comment" id="client_comment" class="input-text" rows="5">{$_aRequest.client_comment}</textarea>                    </div>				</div>				<div class="control-group">					<label class="control-label">{$aLang.plugin.minimarket.admin_order_delivery_time}:</label>					<div class="controls">						{if $oOrder->getDeliveryServiceTimeFrom() || $oOrder->getDeliveryServiceTimeTo()}							{$aLang.plugin.minimarket.admin_order_delivery_time_from}&nbsp;{$oOrder->getDeliveryServiceTimeFrom()}&nbsp;{$aLang.plugin.minimarket.admin_order_delivery_time_to}&nbsp;{$oOrder->getDeliveryServiceTimeTo()}						{else}						&mdash;						{/if}					</div>				</div>				<div class="control-group">                    <label class="control-label">{$aLang.plugin.minimarket.order_city}:</label>                    <div class="controls">						<div class="js-geo-select">							<select disabled class="js-geo-country input-width-200" name="geo_country">								<option value="">{$aLang.geo_select_country}</option>								{if $aGeoCountries}									{foreach from=$aGeoCountries item=oGeoCountry}										<option value="{$oGeoCountry->getId()}" {if $oGeoTarget and $oGeoTarget->getCountryId()==$oGeoCountry->getId()}selected="selected"{/if}>{$oGeoCountry->getName()}</option>									{/foreach}								{/if}							</select><br />							<select disabled class="js-geo-region input-width-200" name="geo_region" {if !$oGeoTarget or !$oGeoTarget->getCountryId()}style="display:none;"{/if}>								<option value="">{$aLang.geo_select_region}</option>								{if $aGeoRegions}									{foreach from=$aGeoRegions item=oGeoRegion}										<option value="{$oGeoRegion->getId()}" {if $oGeoTarget and $oGeoTarget->getRegionId()==$oGeoRegion->getId()}selected="selected"{/if}>{$oGeoRegion->getName()}</option>									{/foreach}								{/if}							</select><br />							<select disabled class="js-geo-city input-width-200" name="geo_city" {if !$oGeoTarget or !$oGeoTarget->getRegionId()}style="display:none;"{/if}>								<option value="">{$aLang.geo_select_city}</option>								{if $aGeoCities}									{foreach from=$aGeoCities item=oGeoCity}										<option value="{$oGeoCity->getId()}" {if $oGeoTarget and $oGeoTarget->getCityId()==$oGeoCity->getId()}selected="selected"{/if}>{$oGeoCity->getName()}</option>									{/foreach}								{/if}							</select>						</div>                    </div>				</div>				<div class="control-group">                    <label class="control-label">{$aLang.plugin.minimarket.admin_order_delivery}:</label>                    <div class="controls">						<select disabled>							<option value="">{$aLang.plugin.minimarket.admin_order_select_delivery}</option>							{if $aDeliveryService}								{foreach from=$aDeliveryService item=oDeliveryService}									<option value="{$oDeliveryService->getId()}" {if $oOrder->getDeliveryServiceId()==$oDeliveryService->getId()}selected="selected"{/if}>{$oDeliveryService->getName()}</option>								{/foreach}							{/if}						</select>                    </div>				</div>				<div class="control-group">                    <label class="control-label">{$aLang.plugin.minimarket.admin_order_pay}:</label>                    <div class="controls">						<select disabled>							<option value="">{$aLang.plugin.minimarket.admin_order_select_pay}</option>							{if $aPaySystem}								{foreach from=$aPaySystem item=oPaySystem}									<option value="{$oPaySystem->getId()}" {if $oOrder->getPaySystemId()==$oPaySystem->getId()}selected="selected"{/if}>{$oPaySystem->getName()}</option>								{/foreach}							{/if}						</select>                    </div>				</div>				<div class="control-group">					<label class="control-label">{$aLang.plugin.minimarket.admin_order_cart_sum}:</label>					<div class="controls">						{if $oOrder->getCartSum()}							{number_format($oOrder->getCartSum(),2,',',' ')}&nbsp;$						{else}						0						{/if}					</div>				</div>				<div class="control-group">					<label class="control-label">{$aLang.plugin.minimarket.admin_order_delivery_service_sum}:</label>					<div class="controls">						{if $oOrder->getDeliveryServiceSum()}							{number_format($oOrder->getDeliveryServiceSum(),2,',',' ')}&nbsp;$						{else}						0						{/if}					</div>				</div>				<div class="control-group">					<label class="control-label">{$aLang.plugin.minimarket.admin_order_status_label}:</label>					<div class="controls">						{if !$oOrder->getStatus()}							{$aLang.plugin.minimarket.admin_order_status_formation}						{else}							<select name="status">								<option {if $oOrder->getStatus()==1}selected="selected"{/if} value="1">{$aLang.plugin.minimarket.admin_order_status_adopted}</option>								<option {if $oOrder->getStatus()==2}selected="selected"{/if} value="2">{$aLang.plugin.minimarket.admin_order_status_paid}</option>								<option {if $oOrder->getStatus()==3}selected="selected"{/if} value="3">{$aLang.plugin.minimarket.admin_order_status_ok}</option>							</select>						{/if}					</div>				</div>			</div>		</div>		<div class="b-wbox">			<div class="b-wbox-header">				<div class="b-wbox-header-title">{$aLang.plugin.minimarket.admin_order_products}</div>			</div>			<div class="b-wbox-content">				<table class="table table-bordered">					<thead>						<tr>							<th>{$aLang.plugin.minimarket.admin_order_purchase}</th>							<th class="span2">{$aLang.plugin.minimarket.admin_order_count}</th>							<th class="span2">{$aLang.plugin.minimarket.admin_order_cost}</th>						</tr>					</thead>					<tbody class="content">					{foreach from=$aProducts item=oProduct}						<tr>							<td>								<a href="{$oProduct->getWebPath()}">{$oProduct->getName()}</a>							</td>							<td class="center">								{$aCartObjects[$oProduct->getId()]}							</td>							<td class="center">								{if $aCartObjects[$oProduct->getId()]}									{number_format($oProduct->getPrice()*$aCartObjects[$oProduct->getId()],2,',',' ')}&nbsp;$								{else}								0								{/if}							</td>						</tr>					{/foreach}					</tbody>				</table>			</div>		</div>		<div class="b-wbox">			<div class="b-wbox-content">				<button type="submit" class="btn btn-primary" name="submit">{$aLang.plugin.minimarket.admin_order_submit}</button>				<a href="{router page='admin'}mm_order_delete/{$oOrder->getId()}/?security_ls_key={$ALTO_SECURITY_KEY}"					class="btn btn-danger"					onclick="return confirm('{$aLang.plugin.minimarket.order_detele_confirm}');">						{$aLang.plugin.minimarket.admin_order_delete}				</a>			</div>		</div>	</form></div>{/block}