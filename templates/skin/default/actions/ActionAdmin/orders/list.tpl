{extends file='actions/ActionAdmin/info/index.tpl'}	{block name="content-bar"}	<div class="btn-group">		<a href="#" class="btn btn-primary disabled"><i class="icon-plus-sign"></i></a>	</div>{/block}{block name="content-body"}		<div class="b-wbox">		<div class="b-wbox-content nopadding">			<table class="table table-striped table-condensed pages-list">				<thead>				<tr>					<th>{$aLang.plugin.minimarket.order_number}</th>					<th>{$aLang.plugin.minimarket.order_user_data}</th>					<th>{$aLang.plugin.minimarket.order_delivery_service}</th>					<th>{$aLang.plugin.minimarket.order_pay_system}</th>					<th>{$aLang.plugin.minimarket.order_date}</th>					<th>{$aLang.plugin.minimarket.order_status}</th>					<th>{$aLang.plugin.minimarket.order_action}</th>				</tr>				</thead>				<tbody class="content">					{foreach from=$aOrder item=oOrder}					<tr>						<td class="center">							{$oOrder->getId()}						</td>						<td class="center">							{$oOrder->getClientName()}<br />							{$oOrder->getClientPhone()}						</td>						<td class="center">							{$oOrder->getDeliveryServiceName()}						</td>						<td class="center">							{$oOrder->getPaySystemName()}						</td>						<td class="center">							{if !$oOrder->getTime()}							&mdash;							{else}								{date('Y-m-d H-m-i', $oOrder->getTime())}							{/if}						</td>						<td class="center">							{if !$oOrder->getStatus()}								{$aLang.plugin.minimarket.admin_order_status_formation}							{else if $oOrder->getStatus()==1}								{$aLang.plugin.minimarket.admin_order_status_adopted}							{else if $oOrder->getStatus()==2}								{$aLang.plugin.minimarket.admin_order_status_paid}							{else if $oOrder->getStatus()==3}								{$aLang.plugin.minimarket.admin_order_status_ok}							{/if}						</td>						<td class="center">							<a href="{router page='admin'}mm_order_edit/{$oOrder->getId()}/">								<i class="icon-edit tip-top" title="{$aLang.plugin.minimarket.order_edit}"></i>							</a>							<a href="{router page='admin'}mm_order_delete/{$oOrder->getId()}/?security_ls_key={$ALTO_SECURITY_KEY}"								onclick="return confirm('{$aLang.plugin.minimarket.order_detele_confirm}');">									<i class="icon-remove tip-top" title="{$aLang.plugin.minimarket.order_remove}"></i>							</a>						</td>					</tr>					{/foreach}				</tbody>			</table>		</div>	</div>		{include file="inc.paging.tpl"}	{/block}